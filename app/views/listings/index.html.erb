<div class="text-center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          
        <div class="caption">
          <h2><%= listing.name %></h2><br>
          <h2><%= listing.description %></h2><br>
          <%= number_to_currency(listing.price) %><br>
          <%= link_to 'Show', listing, class: "btn btn-link" %>
          <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
          <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
        </div>
      </div>
      </div>
    <% end %>
  </div>
</div> 
<br>



<%= link_to '#', :class => "btn btn-danger" do %>
  <i class="glyphicon glyphicon-euro"></i>
<% end %>